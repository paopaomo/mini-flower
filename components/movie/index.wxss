/* components/movie/index.wxss */

.container {
  width: 200rpx;
  display: flex;
  flex-direction: column;
}

.poster {
  width: 100%;
  height: 270rpx;
  margin-bottom: 22rpx;
}

.title {
  display: block;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.rate-container {
  display: flex;
  align-items: baseline;
  margin-top: 6rpx;
}

.score {
  margin-left: 20rpx;
  font-size: 24rpx;
}