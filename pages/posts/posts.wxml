<!--pages/posts/posts.wxml-->

<view>
  <swiper indicator-dots autoplay circular interval="3000">
    <swiper-item>
      <image src="/images/bestplayers.png" />
    </swiper-item>
    <swiper-item>
      <image src="/images/lpl.png" />
    </swiper-item>
    <swiper-item>
      <image src="/images/jumpfly.png" />
    </swiper-item>
  </swiper>
  <block wx:for="{{postList}}">
    <view class="post-container">
      <view class="post-author-date">
        <image src="{{item.avatar}}" class="post-author" />
        <text class="post-date">{{item.date}}</text>
      </view>
      <text class="post-title">{{item.title}}</text>
      <image src="{{item.imgSrc}}" class="post-image" />
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <l-icon name="favor" size="28" color="#666666" class="post-like-image" />
        <text class="post-like-font">{{item.collection}}</text>
        <l-icon name="eye" size="32" color="#666666" class="post-like-image" />
        <text class="post-like-font">{{item.reading}}</text>
      </view>
    </view>
  </block>
</view>